<UserControl x:Class="ResourcePlanner.Views.Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcePlanner.Viewmodels"
        mc:Ignorable="d"
        Height="Auto" Width="Auto">
    <UserControl.DataContext>
        <local:UsersViewModel/>
    </UserControl.DataContext>
    <Grid Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50" 
                           Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ListView Grid.Column="0" 
                  Grid.RowSpan="3"
                  ItemsSource="{Binding Userlist}" SelectionChanged="ListView_SelectionChanged"/>
        <Label Grid.Column="1" 
               Grid.ColumnSpan="2" 
               Content="Create new user" 
               FontSize="28" 
               Width="Auto"/>
        <StackPanel Grid.Column="1" 
                    Grid.Row="1" 
                    HorizontalAlignment="Center">
            <Label Content="Enter the name"/>
            <TextBox Text="{Binding Name}"/>
            <Label Content="Enter email"/>
            <TextBox Text="{Binding Email}"/>
            <Label Content="Enter phone number"/>
            <TextBox Text="{Binding Phone}"/>
        </StackPanel>
        <Grid Grid.Column="2" 
              Grid.Row="1">
            <StackPanel Grid.Column="2" 
                        HorizontalAlignment="Center">
                <Label Content="Choose the role"/>
                <Menu>
                    <MenuItem/>
                    <MenuItem/>
                </Menu>
                <Label Content="Enter the username"/>
                <TextBox Text="{Binding Username}"/>
                <Label Content="Enter the password"/>
                <TextBox Text="{Binding Password}"/>
            </StackPanel>
        </Grid>
        <Grid       Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2">
            <Button Content="Save" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right"
                    Command="{Binding SaveCMD}"/>
            <Button Content="Delete" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Left"
                    Command="{Binding DeleteCMD}"/>
            <Button Content="New"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Command="{Binding MakeNewCMD}"/>
        </Grid>
    </Grid>
</UserControl>
