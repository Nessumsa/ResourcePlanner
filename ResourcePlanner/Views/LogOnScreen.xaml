<UserControl x:Class="ResourcePlanner.Views.LogOnScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcePlanner.Views"
        mc:Ignorable="d"
        Height="300" Width="200">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="Lightblue"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <StackPanel HorizontalAlignment="Center">
        <Label Content="Program name"/>
        <Label Content="Login"/>
        <Label Content="Username" Margin="10"/>
        <TextBox/>
        <Label Content="Password" Margin="10"/>
        <TextBox/>
        <Button Content="Login" Margin="15"/>
        <Button Content="Forgot password?" Margin="20"/>
    </StackPanel>
</UserControl>
