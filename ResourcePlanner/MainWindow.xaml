<Window x:Class="ResourcePlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourcePlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="LightGray">
            <Button Content="Home" Command="{Binding NavigateCommand}" CommandParameter="Homescreen" Margin="5"/>
            <Button Content="Statistics" Command="{Binding NavigateCommand}" CommandParameter="Statistics" Margin="5"/>
            <Button Content="Resources" Command="{Binding NavigateCommand}" CommandParameter="Resources" Margin="5"/>
            <Button Content="Users" Command="{Binding NavigateCommand}" CommandParameter="Users" Margin="5"/>
            <Button Content="Institution" Command="{Binding NavigateCommand}" CommandParameter="Institution" Margin="5"/>
        </StackPanel>

        <ContentControl Content="{Binding CurrentView}" Grid.Row="1"/>
    </Grid>
</Window>
